                <Button
                    android:id="@+id/orangeGirlsMinusTen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Red Girls"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                <TextView
                    android:id="@+id/redGirlsPointsDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    tools:text="20" />

                <Button
                    android:id="@+id/redGirlsPlusTen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+10" />

                <Button
                    android:id="@+id/redGirlsMinusTen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yellow Girls"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                <TextView
                    android:id="@+id/yellowGirlsPointsDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    tools:text="20" />

                <Button
                    android:id="@+id/yellowGirlsPlusTen"
                    android:layout_width="wrap_content"
